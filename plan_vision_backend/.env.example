# PlanVision Backend - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL="postgresql://user:password@localhost:5432/plan_vision?schema=plan_vision"

# =============================================================================
# AUTHENTICATION (Better Auth)
# =============================================================================
# Generate a strong secret: openssl rand -base64 32
BETTER_AUTH_SECRET="generate-a-strong-secret-here"
BETTER_AUTH_BASE_URL="http://localhost:3000"
BETTER_AUTH_BASE_PATH="/api/auth"
BETTER_AUTH_TRUSTED_ORIGINS="http://localhost:3000"

# =============================================================================
# GOOGLE OAUTH
# =============================================================================
# Create credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_OAUTH_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_OAUTH_CLIENT_SECRET="your-google-client-secret"

# =============================================================================
# APPLE SIGN-IN
# =============================================================================
# Configure at: https://developer.apple.com/account/resources/authkeys/list
APPLE_BUNDLE_ID="your.bundle.id"
APPLE_TEAM_ID="YOUR_TEAM_ID"
APPLE_KEY_ID="YOUR_KEY_ID"
# Note: Replace newlines with \n when pasting the key
APPLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_KEY_HERE\n-----END PRIVATE KEY-----"

# =============================================================================
# GOOGLE CLOUD PLATFORM
# =============================================================================
# Create a project at: https://console.cloud.google.com
GCS_BUCKET="your-gcs-bucket-name"
GCP_PROJECT_ID="your-gcp-project-id"
GCP_LOCATION="us-central1"

# =============================================================================
# AI & EXTERNAL APIS
# =============================================================================
# Gemini API: https://ai.google.dev/
GEMINI_API_KEY="your-gemini-api-key"

# Pexels API: https://www.pexels.com/api/
PEXELS_API_KEY="your-pexels-api-key"
